{% extends 'base.html.twig' %}

{% block body %}


    <h3>Show Offer ID {{ offer.id }}</h3>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <tbody>
            <tr>
                <td>ID</td>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <td>Title</td>
                <td>{{ offer.title }}</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <td>E-mail</td>
                <td>{{ offer.email }}</td>
            </tr>
            <tr>
                <td>Image</td>
                <td>{{ offer.imageUrl|default() }}</td>
            </tr>
            <tr>
                <td>Created at</td>
                <td>{{ offer.creationDate|default() }}</td>
            </tr>


            </tbody>
        </table>

    </div>
    <div class="row">
        <div class="col-md-1 text-left">
            <a href="{{ path('offers_list') }}">
                <button type="button" class="btn btn-outline-primary">Go back</button>
            </a>
        </div>
        <div class="col-md-1 text-left">
            <a href="{{ path('offers_edit', {"offerId":offer.id} ) }}">
                <button type="button" class="btn btn-outline-primary">Edit</button>
            </a>
        </div>
        <div class="col-md-1 text-left">
            <a href="{{ path('offers_delete' , {"offerId":offer.id} ) }}">
                <button type="button" class="btn btn-outline-primary">Delete</button>
            </a>
        </div>
    </div>



{% endblock %}


