{% extends 'base.html.twig' %}

{% block body %}


        <h2>Offers</h2>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Email</th>
                    <th>Image URL</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for  id,offer in offers %}
                    <tr>
                        <td>{{ offer.id }}</td>
                        <td>2</td>
                        <td>3</td>
                        <td>4</td>
                        <td>5</td>
                        <td>6</td>
                        <td>
                            <span>View</span> |
                            <span>Edit</span> |
                            <span>Delete</span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>



{% endblock %}


